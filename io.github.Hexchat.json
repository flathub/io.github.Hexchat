{
  "app-id": "io.github.Hexchat",
  "branch": "stable",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.30",
  "sdk": "org.gnome.Sdk",
  "command": "hexchat",
  "rename-icon": "hexchat",
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--socket=session-bus",
    "--share=network",
    "--socket=pulseaudio",
    "--filesystem=xdg-download"
  ],
  "add-extensions": {
    "io.github.Hexchat.Plugin": {
      "version": "18.08",
      "directory": "extensions",
      "add-ld-path": "lib",
      "merge-dirs": "lib/hexchat/plugins",
      "subdirectories": true,
      "no-autodownload": true,
      "autodelete": true
    }
  },
  "modules": [
    "shared-modules/gtk2/gtk2.json",
    {
      "name": "hexchat",
      "buildsystem": "meson",
      "config-opts": [
        "--buildtype=release",
        "-Ddbus-service-use-appid=true"
      ],
      "cleanup": [
        "/lib/pkgconfig",
        "/share/man"
      ],
      "post-install": [
        "install -d /app/extensions"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://dl.hexchat.net/hexchat/hexchat-2.14.2.tar.xz",
          "sha256": "7792b9e52560fbd3e10d75bfb5d138a20913a87771d676d296547f1b4ac09618"
        },
        {
          "type": "patch",
          "path": "Load-plugins-from-Flatpak-extensions.patch"
        },
        {
          "type": "patch",
          "path": "sysinfo-Add-support-for-etc-os-release.patch"
        }
      ],
      "modules": [
        "org.luajit.Luajit.json",
        {
          "name": "lgi",
          "no-autogen": true,
          "build-options": {
            "env": {
              "LUA_CFLAGS": "-I/app/include/luajit-2.1"
            }
          },
          "sources": [
            {
              "type": "archive",
              "url": "https://github.com/pavouk/lgi/archive/0.9.2.tar.gz",
              "sha256": "cfc4105482b4730b3a40097c9d9e7e35c46df2fb255370bdeb2f45a886548c4f"
            },
            {
              "type": "shell",
              "commands": [
                "sed -i 's|/usr/local|/app|' ./lgi/Makefile"
              ]
            }
          ]
        },
        {
          "name": "perl",
          "no-autogen": true,
          "config-opts": [
            "-des"
          ],
          "build-options": {
            "cflags": "-fPIC",
            "ldflags": "-fpic",
            "no-debuginfo": true
          },
          "cleanup": [
            "/bin",
            "/include",
            "/share/man",
            "/lib/perl5/site_perl",
            "*.pod"
          ],
          "sources": [
            {
              "type": "archive",
              "url": "https://www.cpan.org/src/5.0/perl-5.26.1.tar.gz",
              "sha256": "e763aa485e8dc1a70483dbe6d615986bbf32b977f38016480d68c99237e701dd"
            },
            {
              "type": "script",
              "dest-filename": "configure",
              "commands": [
                "exec ./configure.gnu $@"
              ]
            }
          ]
        }
      ]
    }
  ]
}
